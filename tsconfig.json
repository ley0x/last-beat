{
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@common/*": ["./src/components/_common/*"],
      "@app/*": ["./src/app/*"],
      "@lib/*": ["./src/lib/*"],
      "@styles/*": ["./src/styles/*"],
      "@services/*": ["./src/services/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@types/*": ["./src/types/*"],
      "@covers/*": ["./src/app/covers/_components/*"],
      "@lyrics-cards/*": ["./src/app/lyrics-cards/_components/*"],
      "@stats/*": ["./src/app/stats/_components/*"],
      "@tierlists/*": ["./src/app/tierlists/_components/*"],
      "@topsters/*": ["./src/app/topsters/_components/*"],
      "@landing-page/*": ["./src/components/landing-page/*"],
      "@layout/*": ["./src/components/layout/*"],
    },
    "noEmit": true
  }
}